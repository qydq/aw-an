<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rll"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/CommColorBackground">

    <LinearLayout
        android:id="@+id/llInclude"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="15dp">

        <include layout="@layout/newheadlayout" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/llInclude"
        android:background="@color/CommColorWhite"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="3dip">

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp">

                <Button
                    android:id="@+id/btnCoord"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/yy_drawable_selector_super"
                    android:text="CoordinatorLayout" />
            </FrameLayout>

            <ImageView
                android:id="@+id/imageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="180dip"
                android:layout_marginRight="10dip"
                android:layout_marginTop="10dip"
                android:background="@drawable/round"
                android:src="@mipmap/ic_launcher" />

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="right">

                <TextView
                    android:layout_width="25dip"
                    android:layout_height="25dip"
                    android:background="@drawable/tips_circle"
                    android:gravity="center"
                    android:text="5"
                    android:textColor="@android:color/white"
                    android:textSize="15dip"
                    android:textStyle="bold" />
            </FrameLayout>

        </FrameLayout>

        <Button
            android:id="@+id/btn2"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/yy_drawable_selector_md_shape"
            android:clickable="false"
            android:text="测试 Handler延迟普通dialog"
            android:textColor="@drawable/yy_drawable_selector_txt" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_below="@+id/btn2"
            android:layout_marginTop="5dp"
            android:background="@android:color/transparent"
            android:textColor="@drawable/yy_drawable_selector_txt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color3A3A3A" />

        <Button
            android:id="@+id/btn"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_marginTop="25dp"
            android:background="@drawable/yy_drawable_selector_md"
            android:clickable="false"
            android:text="蓝牙测试程序"
            android:textColor="@drawable/yy_drawable_selector_txt" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/color3A3A3A" />

        <android.support.v7.widget.RecyclerView
            android:id="@+id/list"
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:cacheColorHint="#00000000"
            android:fadingEdge="none"
            android:overScrollMode="never" />
    </LinearLayout>

</RelativeLayout>
